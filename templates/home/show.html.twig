		<link id="skinCSS" rel="stylesheet" href="{{asset('externalAssets/skins/default.css')}}">
		<style>
			.switch-primary {
				padding: 6px 10px;
			}

            .collapse ul{
                padding: 6px 0px;
            }

            .header-body{
                background: #1a84ed !important;
            }
            #header i{
                color:white;
            }
            a{
                color: #0088CC;
