   <script>
      $("#image-uploader-show").on("click", function(e){
			$("#image-uploader-hide").show();
			$(".image-uploader").css("display", "block");
			$(this).hide();
      });

		$("#image-uploader-hide").on("click", function(e){
			$("#image-uploader-show").show();
			$(".image-uploader").css("display", "none");
			$(this).hide();
		});

		$('form[name="gallery"]').on("submit", function(e){
			e.preventDefault();
			var posi = document.getElementById('crop_div');
			document.getElementById("top").value=posi.offsetTop;
			document.getElementById("left").value=posi.offsetLeft;
			document.getElementById("right").value=posi.offsetWidth;
			document.getElementById("bottom").value=posi.offsetHeight;
			// $(this).submit();
		})

		$(document).ready(function(){

			var $modal = $('#modal');

			var image = document.getElementById('sample_image');

			var cropper;

			$modal.on('shown.bs.modal', function() {
				cropper = new Cropper(image, {
					aspectRatio: 1,
					viewMode: 3,
					preview:'.preview'
				});
			}).on('hidden.bs.modal', function(){
				cropper.destroy();
				cropper = null;
			});
		});
</script>
