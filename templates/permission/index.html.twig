{% extends 'master/base.html.twig' %}

{% block title %}Permission index
{% endblock %}
{% block maintitle %}

	Permission
{% endblock %}
{% block breadcrumb %}

	<li class="breadcrumb-item active">Permission</li>
{% endblock %}
{% block body %}
	<div class="row">
		<div class="panel col-md">

			<div class="panel-body">
				<div class="row">
					<div class="col-md-12">
						
						<div class="panel panel-info" >
							<div class="panel-heading">
								<div class="pull-right">
									<a type="button" href="#demo" class="btn btn-sm btn-info" href="collapse" data-toggle="collapse">
										<i class="fa fa-plus-circle"></i>
									</a>
								</div>
								<h3 class="panel-title">
									{% if edit  %}Edit 
									<script>
										var test = 1;
									</script>
									{% else %}
										Add New
									{% endif %}
								</h3>
							</div>
							<!-- /.panel-header -->
							<div class="panel-body collapse" id="demo">
								{% if edit  %}
									{% set button_label = 'Update' %}
								{% endif %}
								{{ include('permission/_form.html.twig') }}
							</div>
							<!-- /.panel-body -->
						</div>
					</div>

					<div class="col-md-12">
						<div class="panel panel-info">
							<div class="panel-heading">
								<div class="col-sm-6">
									<h3 class="panel-title">Permission List</h3>
									{# <div class="input-group">
										<input id="email" type="text" class="form-control" name="email" placeholder="Email">
										<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
									</div> #}
								</div>
								<div calss="col-sm-6">
									<form >
										<div class="input-group  pull-right">
											<div class="col-sm-10"><input class="form-control" autocomplete="off" name="search" type="search" placeholder="Search" aria-label="Search"></div>
											<div class="col-sm-2"><button class=" input-group-text btn btn-navbar " type="submit">
													<i class="fa fa-search"></i>
												</button>
											</div>
										</div>
									</form>
								</div>
							</div>
							<div class="panel-body">


								<table class="table table-hover">
									<thead>
										<tr>
											<th>
												#
											</th>
											<th>{{ knp_pagination_sortable(permissions, 'Name', 'p.name') }}</th>
											<th>{{ knp_pagination_sortable(permissions, 'Code', 'p.code') }}</th>

											<th>description</th>
											<th>Action</th>
										</tr>
									</thead>
									<tbody>
										{% set i = 1 %}
										{% for permission in permissions %}
											<tr>
												<td>
													{{ i }}
													{% set i = i+1 %}
												</td>
												<td>{{ permission.name }}</td>
												<td>{{ permission.code }}</td>
												<td>{{ permission.description }}</td>
												<td>
													<form class="d-inline" method="post">
														<input type="hidden" name="edit" value="{{permission.id}}">
														<button class="btn btn-info btn-sm" title="Edit">
															<i class="fa fa-edit"></i>
														</button>
													</form>
													<form class="d-inline" method="post" action="{{ path('permission_delete', {'id': permission.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">

														<input type="hidden" name="_method" value="DELETE">
														<input
														type="hidden" name="_token" value="{{ csrf_token('delete' ~ permission.id) }}">
														{#  <button type="button" data-type="confirm" class="btn btn-danger js-sweetalert" title="Delete">#}
														<button class="btn btn-danger btn-sm" title="Delete">
															<i class="fa fa-trash"></i>
														</button>
													</form>
												</td>
											</tr>
										{% else %}
											<tr>
												<td colspan="5">no records found</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
								<div class="float-right">{{ knp_pagination_render(permissions) }}</div>


							</div>
						</div>
					</div>
					<!-- /.panel-body -->
				</div>
			</div>

		</div>
		<!-- /.panel-body -->
	</div>

{% endblock %}
{% block javascripts %}
	{% if edit %}
		
		<script>
			if(test)
			{
				$("#demo").addClass("in");
				
			}
			$(function () {
				$('#collapse').trigger('click');
			})
		</script>
	{% endif %}
{% endblock %}
